<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="@dimen/sw_px_35"
        android:layout_height="match_parent">

    <com.pan.mylibrary.widget.chart.RadarChartView
            android:id="@+id/radar_view"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/sw_px_35"
            android:layout_weight="1"
            android:layout_height="0dp" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <CheckBox
                android:id="@+id/cb_1"
                android:checked="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="CIRCLE BG"
                android:layout_height="wrap_content" />
        <CheckBox
                android:id="@+id/cb_2"
                android:checked="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="POLYGON BG"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:max="10"
            android:progress="5"
            android:layout_height="wrap_content" />

    <Button
            android:text="Random"
            android:id="@+id/bt_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <Button
            android:text="Animation"
            android:id="@+id/bt_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>