<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/v_line"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/sw_px_300"
            android:layout_width="match_parent"
            android:translationX="-1000dp"
            android:layout_height="@dimen/sw_px_8"
            android:background="@color/white" />

    <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/sw_px_15"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:textColor="@color/white"
            android:alpha="0"
            android:translationX="@dimen/sw_px_380"
            android:drawableStart="@drawable/ic_power"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/sw_px_50"
            android:text="Power by Pan" />
</FrameLayout>